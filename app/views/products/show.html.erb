<div class="container">
<br>

<h3 class="">Product Detail</h3>
<p class=""><button type="button" class="btn-default"><%= link_to 'Back', url_for(:back) %></button></p>
<br>
<%= form_with model: @order, :url => add_to_cart_path, local: true do |form| %>

  <%=hidden_field(:product, :id)%>

<div class="row">
  <div class="col-3">
    <p><%= @product.title %> </p>
    <p><%= @product.product_type_id %> </p>
    <p>Price: <%= @product.price %> </p>
    <p>Description: <%= @product.description %> </p>
    <p>Quantity Available:<%= @product.quantity %> </p>
        <p>
            <%= form.submit 'Add to Shopping Cart', class: "btn btn-warning"%>
        </p>

    </div>
 <%# shows image only if one exits if not then a generic image is shown %>
<% if @product.product_image.present? %>
  <div class="col-9"><%= image_tag @product.product_image %>
<% elsif %>
  <div class="col-9"><%= image_tag('boat.jpeg')%>
 <% end %>

<% end %>
</div>
